{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run C++ in same terminal (no build files)",
            "type": "shell",
            "command": "g++ '${file}' -o /tmp/a.out && /tmp/a.out; rm -f /tmp/a.out",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",         // Uses same terminal panel
                "showReuseMessage": false,
                "clear": false             // Keep previous output
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}
